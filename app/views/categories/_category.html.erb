<div class="card mx-auto my-3">
  <%= link_to category_path(category), class: "custom-link" do %>
    <div class="card-body row">
      <div class="text-center my-2 col-3">
        <h5 class="card-title"><%= category.name%> </h5>
      </div>
      <p class="card-text col-9"><%= category.transacts.count%> </p>
    </div>
  <% end %>
</div>
