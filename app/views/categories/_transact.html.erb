<div class="card mx-auto my-3">
  <%= link_to transact_path(transact), class: "custom-link" do %>
    <div class="card-body row">
      <div class="text-center my-2 col-3">
        <h5 class="card-title"><%= transact.name%> </h5>
      </div>
      <p class="card-text col-9"><%= number_to_currency(transact.amount)%> </p>
    </div>
  <% end %>
</div>
