<div class="pt-5">
  <% if user_signed_in? %>
    <div class="display-6"> Welcome <%= current_user.email %>! </div>
    <div class="row g-3 mt-4">
      <div class="col-md-4 mt-4">
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class:'btn btn-danger' %>
      </div>
      <div class="col-md-4 mt-4">
        <%= link_to "Update account info", edit_user_registration_path, class:'btn btn-secondary' %>
      </div>
    </div>
  <% else %>
    <div class="h2 text-center">You're not logged in, please log into your account or sign in.</div>
    <div class="my-5 text-center">
      <%= button_to "Sign in", new_user_session_path, class:'btn btn-primary' %>
    </div>
  <% end %>
</div>
